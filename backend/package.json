{
  "name": "midlevel-bot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "dev": "nodemon index.js",
    "cli:hf": "node ../cli/chat-cli.js hf",
    "cli:openai": "node ../cli/chat-cli.js openai",
    "run:tasks": "node ../scripts/run_tasks.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "USE_OPENAI=false HUGGINGFACE_API_KEY=dummy jest --colors",
    "load-test": "k6 run ../scripts/load-test.k6.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "envalid": "^7.3.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "pino": "^8.14.0",
    "prom-client": "^14.0.0",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "jest": "^29.7.0",
    "node-fetch": "^2.6.7",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.8",
    "supertest": "^6.3.4",
    "jest-junit": "^13.0.0",
    "nock": "^13.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverage": true,
    "coverageDirectory": "coverage"
  },
  "jest-junit": {
    "output": "./reports/junit.xml",
    "suiteName": "backend-tests"
  },
  "description": "This folder contains the backend for the Midlevelbot project.",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
